<table>
    <column>
        <name>idblock</name>
        <type>serial</type>
        <null>NO</null>
        <default>nextval('webblocks_idblock_seq'::regclass)</default>
    </column>
    <column>
        <name>idpage</name>
        <type>integer</type>
    </column>
    <column>
        <name>type</name>
        <type>character varying(20)</type>
        <null>NO</null>
    </column>
    <column>
        <name>numcolumns</name>
        <type>integer</type>
    </column>
    <column>
        <name>column1</name>
        <type>text</type>
    </column>
    <column>
        <name>column2</name>
        <type>text</type>
    </column>
    <column>
        <name>column3</name>
        <type>text</type>
    </column>
    <column>
        <name>column4</name>
        <type>text</type>
    </column>
    <column>
        <name>containerclass</name>
        <type>character varying(60)</type>
    </column>
    <column>
        <name>rowclass</name>
        <type>character varying(60)</type>
    </column>
    <column>
        <name>posnumber</name>
        <type>integer</type>
        <null>NO</null>
        <default>100</default>
    </column>
    <constraint>
        <name>webblocks_pkey</name>
        <type>PRIMARY KEY (idblock)</type>
    </constraint>
</table>