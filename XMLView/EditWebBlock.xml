<view>
    <columns>
        <group name="data" numcolumns="12">
            <column name="code" display="none" order="100">
                <widget type="text" fieldname="idblock" required="true" />
            </column>
            <column name="idpage" numcolumns="3" order="110">
                <widget type="select" fieldname="idpage">
                    <values source="webpages" fieldcode="idpage" fieldtitle="title"></values>
                </widget>
            </column>
            <column name="type" numcolumns="3" order="110">
                <widget type="select" fieldname="type">
                    <values title="head">head</values>
                    <values title="foot">foot</values>
                    <values title="columns">columns</values>
                </widget>
            </column>
            <column name="column-number" numcolumns="3" order="120">
                <widget type="number" fieldname="numcolumns" />
            </column>
            <column name="position-number" numcolumns="3" order="130">
                <widget type="number" fieldname="posnumber" />
            </column>
        </group>
        <group name="info" numcolumns="12">
            <column name="column1" numcolumns="12" order="100">
                <widget type="textarea" fieldname="column1" />
            </column>
            <column name="column2" numcolumns="12" order="100">
                <widget type="textarea" fieldname="column2" />
            </column>
            <column name="column3" numcolumns="12" order="100">
                <widget type="textarea" fieldname="column3" />
            </column>
            <column name="column4" numcolumns="12" order="100">
                <widget type="textarea" fieldname="column4" />
            </column>
        </group>
        <group name="bootstrap" numcolumns="12">
            <column name="container-class" numcolumns="6" order="100">
                <widget type="text" fieldname="containerclass" required="true" />
            </column>
            <column name="row-class" numcolumns="6" order="100">
                <widget type="text" fieldname="rowclass" required="true" />
            </column>
        </group>
    </columns>
    <rows>
        <row type="actions">
            <button type="action" label="preview" color="info" action="preview" icon="fa-eye" />
        </row>
    </rows>
</view>

